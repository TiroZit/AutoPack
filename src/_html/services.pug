      .services__items 
        .services__item 
          img.services__item-img(src='@img/services/1.jpg', alt='Ламинация',)
          h3.services__item-title Услуги ламинации бумаги
          p.services__item-text Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus consequat maximus dictum.
        .services__item 
          img.services__item-img(src='@img/services/2.jpg', alt='Ламинация',)
